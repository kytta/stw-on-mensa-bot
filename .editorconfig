root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space
max_line_length = off
trim_trailing_whitespace = false

[*.py]
indent_size = 4
indent_style = space
max_line_length = 88

[*.yml]
indent_size = 2
indent_style = space
